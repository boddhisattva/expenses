<% provide(:title, 'Total') %>
<h1>Total Expenses</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(calculate_total_expenses_path, method: :get, remote: true) do %>
      <div id="error_message" ></div>

      <%= label_tag :from_date %>
      <%= date_field_tag :from_date %>

      <%= label_tag :to_date %>
      <%= date_field_tag :to_date %>

      <%= submit_tag "Calculate total", class: "btn btn-primary" %>

      <br></br>
      <div id="total_expenses" ></div>
    <% end %>
  </div>
</div>

